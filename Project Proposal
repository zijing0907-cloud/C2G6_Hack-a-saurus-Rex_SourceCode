    <!-- CHART CONFIGURATION -->
    <script>
        // 1. Label Wrapping Helper Function (Mandatory)
        function wrapLabel(label, maxLen = 16) {
            if (label.length <= maxLen) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length <= maxLen) {
                    currentLine += " " + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // 2. Common Tooltip Configuration (Mandatory)
        const commonTooltipConfig = {
            backgroundColor: 'rgba(17, 24, 39, 0.9)', // Gray-900
            titleFont: { family: 'Inter', size: 14 },
            bodyFont: { family: 'Inter', size: 13 },
            padding: 12,
            cornerRadius: 8,
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // 3. Chart 1: Operational Inefficiency (Doughnut)
        const ctxInefficiency = document.getElementById('chartInefficiency').getContext('2d');
        const labelsInefficiency = ["Efficient Trips (>60% Full)", "Wasted Trips (<60% Full)"];
        
        new Chart(ctxInefficiency, {
            type: 'doughnut',
            data: {
                labels: labelsInefficiency.map(l => wrapLabel(l, 20)),
                datasets: [{
                    // Data reflects the 40% wasted trips (40) vs effective trips (60-25=35), but since we must show the 40% waste, we prioritize that visual.
                    data: [60, 40],
                    backgroundColor: [
                        '#E5E7EB', // Gray (Normal)
                        '#EF4444'  // Red (Problem)
                    ],
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '70%',
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { font: { family: 'Inter' }, padding: 10 }
                    },
                    tooltip: commonTooltipConfig
                }
            }
        });

        // 4. Chart 2: Engagement Gap (Bar)
        const ctxEngagement = document.getElementById('chartEngagement').getContext('2d');
        const labelsEngagement = ["Current Recycling Rate", "Target Rate"];

        new Chart(ctxEngagement, {
            type: 'bar',
            data: {
                labels: labelsEngagement.map(l => wrapLabel(l)),
                datasets: [{
                    label: 'Participation %',
                    data: [30, 85],
                    backgroundColor: [
                        '#9CA3AF', // Gray (Current: <30%)
                        '#F59E0B'  // Amber (Target)
                    ],
                    borderRadius: 6,
                    barPercentage: 0.6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        grid: { borderDash: [4, 4] }
                    },
                    x: {
                        grid: { display: false }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: commonTooltipConfig
                }
            }
        });

        // 5. Chart 3: Environmental Impact (Horizontal Bar - for Impact Section)
        const ctxImpact = document.getElementById('chartImpact').getContext('2d');
        const labelsImpact = ["Standard Logistics", "AI-Optimized Route"];

        new Chart(ctxImpact, {
            type: 'bar',
            data: {
                labels: labelsImpact.map(l => wrapLabel(l, 20)),
                datasets: [{
                    label: 'Carbon Emissions Index',
                    data: [100, 70], // 30% reduction
                    backgroundColor: [
                        '#9CA3AF', // Gray
                        '#10B981'  // Emerald
                    ],
                    borderRadius: 6,
                    barPercentage: 0.6
                }]
            },
            options: {
                indexAxis: 'y', // Horizontal
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        beginAtZero: true,
                        max: 120,
                        grid: { borderDash: [4, 4] }
                    },
                    y: {
                        grid: { display: false }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: commonTooltipConfig
                }
            }
        });

    </script>
