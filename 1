    <script>
        // Navigation Logic
        function switchTab(tabId) {
            // Hide all sections
            document.querySelectorAll('section').forEach(el => el.classList.add('hidden'));
            document.querySelectorAll('.nav-icon').forEach(el => el.classList.remove('active'));

            // Show selected
            document.getElementById('tab-' + tabId).classList.remove('hidden');
            document.getElementById('nav-' + tabId).classList.add('active');
        }

        // Smart Bin Logic (Feature 1)
        function simulateThrow(type) {
            const slot = document.getElementById('binEntry');
            const feedback = document.getElementById('bin-feedback');

            slot.classList.add('open');
            slot.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Analyzing...';

            setTimeout(() => {
                slot.classList.remove('open');
                
                if (type === 'wrong') {
                    slot.classList.add('reject');
                    slot.innerText = "CONTAMINATED!";
                    feedback.innerText = "⚠ Alarm: Food residue detected. Please rinse.";
                    feedback.classList.replace('text-emerald-400', 'text-red-400');
                    setTimeout(() => slot.classList.remove('reject'), 1000);
                } else {
                    slot.innerText = "Accepted!";
                    feedback.innerText = `✅ Sorted to ${type.toUpperCase()}. +5 Points Earned.`;
                    feedback.classList.replace('text-red-400', 'text-emerald-400');
                    // Add to wallet visual only
                }
                
                setTimeout(() => slot.innerText = "Insert Waste Here", 2000);
            }, 1000);
        }

        // CCTV Simulation (Feature 5)
        setInterval(() => {
            const overlay = document.getElementById('cctv-overlay');
            if(Math.random() > 0.7) {
                overlay.classList.remove('hidden');
                setTimeout(() => overlay.classList.add('hidden'), 2000);
            }
        }, 5000);

        // Edu Scanner Logic (Feature 9)
        function mockScan(resultType) {
            const resBox = document.getElementById('scan-result');
            const title = document.getElementById('scan-title');
            const desc = document.getElementById('scan-desc');
            const val = document.getElementById('scan-value');

            resBox.classList.remove('hidden');
            
            if(resultType === 'recycle') {
                title.innerText = "✅ Recyclable: PET Bottle";
                title.className = "font-bold text-lg text-emerald-400";
                desc.innerText = "Tip: Remove cap and crush to save space.";
                val.innerText = "Potential Value: RM 0.05";
            } else {
                title.innerText = "❌ General Waste: Used Tissue";
                title.className = "font-bold text-lg text-gray-400";
                desc.innerText = "This cannot be recycled due to hygiene reasons. Please bin it.";
                val.innerText = "Value: RM 0.00";
            }
        }
    </script>
</body>
</html>
