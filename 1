    <script>
        // Initialize Map
        const map = L.map('map').setView([3.139, 101.6869], 13); // KL coordinates
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);

        // Sample smart bins
        const bins = [
            { coords: [3.139, 101.686], fill: 92, type: 'plastic', bonus: true },
            { coords: [3.145, 101.690], fill: 65, type: 'metal', bonus: false },
            { coords: [3.135, 101.680], fill: 88, type: 'paper', bonus: true }
        ];

        bins.forEach((bin, i) => {
            const color = bin.fill > 80 ? 'red' : bin.fill > 50 ? 'orange' : 'green';
            const marker = L.circleMarker(bin.coords, {
                radius: 12,
                fillColor: color,
                color: 'white',
                weight: 3,
                opacity: 1,
                fillOpacity: 0.8
            }).addTo(map);
            marker.bindPopup(`
                <div class="p-4">
                    <h3 class="font-bold text-lg">${bin.type.toUpperCase()} Bin</h3>
                    <div>Fill: ${bin.fill}%</div>
                    ${bin.bonus ? '<div class="text-yellow-400 font-bold">üéÅ BONUS ACTIVE</div>' : ''}
                    <button onclick="navigateToBin(${i})" class="mt-2 bg-green-600 text-white px-4 py-1 rounded-full text-sm">Navigate</button>
                </div>
            `);
        });

        // Wallet update
        let cashCoins = 0;
        function updateWallet() {
            document.getElementById('wallet').textContent = `CashCoins: ${cashCoins}`;
        }

        // Scanner functionality
        document.getElementById('scanBtn').onclick = () => {
            document.getElementById('scannerModal').classList.remove('hidden');
        };
        document.getElementById('closeScanner').onclick = () => {
            document.getElementById('scannerModal').classList.add('hidden');
        };
        document.getElementById('claimReward').onclick = () => {
            cashCoins += 25;
            updateWallet();
            alert('üéâ +25 CashCoins earned!');
            document.getElementById('scannerModal').classList.add('hidden');
        };

        // Chatbot
        const toggleChat = document.getElementById('toggleChat');
        const chatbot = document.getElementById('chatbot');
        toggleChat.onclick = () => chatbot.classList.toggle('hidden');

        // Navigate to bin
        function navigateToBin(index) {
            alert(`Opening navigation to bin ${index + 1}!\n(Integrates with Google Maps/Waze)`);
        }

        // Animate stats on scroll
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-fade-in');
                }
            });
        });
        document.querySelectorAll('.bg-white\\/70').forEach(el => observer.observe(el));

        updateWallet();
    </script>
