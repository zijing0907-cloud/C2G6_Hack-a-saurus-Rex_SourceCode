// --- COMPONENT: MAP (SMART MOBILITY + COLLECTOR MODE) ---
const EcoMap = ({ setView }) => {
  const [collectorMode, setCollectorMode] = useState(false);
  const position = [2.9935, 101.7874]; // UTAR/Kajang area

  return (
    <div className="h-screen w-full relative z-0">
       {/* Floating UI */}
       <div className="absolute top-4 left-4 right-4 z-[400]">
         <div className="bg-white/90 backdrop-blur-md p-4 rounded-xl shadow-lg border border-white/50">
            <div className="flex justify-between items-center mb-2">
                <button onClick={() => setView('dashboard')} className="p-1 bg-gray-100 rounded-full"><X size={16}/></button>
                <h2 className="font-bold text-gray-800">Live Map</h2>
                <div className="flex items-center gap-2">
                    <span className="text-[10px] font-bold uppercase text-gray-500">Collector Mode</span>
                    <button 
                        onClick={() => setCollectorMode(!collectorMode)}
                        className={`w-10 h-6 rounded-full p-1 transition-colors ${collectorMode ? 'bg-emerald-500' : 'bg-gray-300'}`}
                    >
                        <div className={`w-4 h-4 bg-white rounded-full transition-transform ${collectorMode ? 'translate-x-4' : ''}`}></div>
                    </button>
                </div>
            </div>
            {collectorMode && (
                <div className="bg-emerald-50 text-emerald-700 p-2 rounded-lg text-xs font-bold flex items-center gap-2 animate-fade-in">
                    <Truck size={14} />
                    <span>AI Route Optimization Active: Saving 2.4km today.</span>
                </div>
            )}
         </div>
       </div>

      <MapContainer center={position} zoom={15} style={{ height: '100%', width: '100%' }} zoomControl={false}>
        <TileLayer url="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png" />
        
        {/* Bins */}
        <Marker position={[2.9935, 101.7874]}><Popup>Bin A (Available)</Popup></Marker>
        <Marker position={[2.9950, 101.7890]}><Popup>Bin B (Full)</Popup></Marker>
        <Marker position={[2.9920, 101.7850]}><Popup>Bin C (Available)</Popup></Marker>

        {/* Collector Route (Only Visible in Collector Mode) */}
        {collectorMode && (
            <Polyline 
                positions={[
                    [2.9935, 101.7874], 
                    [2.9950, 101.7890],
                    [2.9960, 101.7900]
                ]} 
                color="blue" 
                dashArray="10, 10" 
                weight={4} 
            />
        )}
      </MapContainer>
    </div>
  );
};

// --- MAIN APP SHELL ---
function App() {
  const [view, setView] = useState('dashboard');
  const [balance, setBalance] = useState(45.00);
  const [pool, setPool] = useState(3620);

  const handleScan = (amount) => {
    setBalance(b => b + amount);
    setPool(p => p + (amount * 0.1)); // 10% tax for community
    setView('dashboard');
  };

  return (
    <div className="bg-gray-100 min-h-screen max-w-md mx-auto relative shadow-2xl overflow-hidden border-x border-gray-200">
      
      {/* View Router */}
      {view === 'dashboard' && <Dashboard userBalance={balance} communityPool={pool} setView={setView} />}
      {view === 'camera' && <AICamera onScanComplete={handleScan} setView={setView} />}
      {view === 'map' && <EcoMap setView={setView} />}
      {view === 'leaderboard' && <Leaderboard />}
      {view === 'marketplace' && <Marketplace balance={balance} setView={setView} />}

      {/* Dynamic Tab Bar */}
      {view !== 'camera' && (
        <nav className="absolute bottom-0 w-full bg-white/95 backdrop-blur-md border-t border-gray-200 flex justify-around items-end py-2 pb-6 z-[500] px-2">
          <button onClick={() => setView('dashboard')} className={`flex flex-col items-center gap-1 p-2 w-16 transition ${view === 'dashboard' ? 'text-emerald-600 -translate-y-2' : 'text-gray-400'}`}>
            <Home size={view === 'dashboard' ? 26 : 22} className={view === 'dashboard' ? 'drop-shadow-lg' : ''} />
            <span className="text-[10px] font-bold">Home</span>
          </button>
          
          <button onClick={() => setView('leaderboard')} className={`flex flex-col items-center gap-1 p-2 w-16 transition ${view === 'leaderboard' ? 'text-emerald-600 -translate-y-2' : 'text-gray-400'}`}>
            <Trophy size={view === 'leaderboard' ? 26 : 22} />
            <span className="text-[10px] font-bold">Rank</span>
          </button>

          {/* Floating Scan Button */}
          <div className="relative -top-6">
            <button onClick={() => setView('camera')} className="bg-emerald-500 text-white w-16 h-16 rounded-full shadow-emerald-500/50 shadow-lg border-4 border-gray-50 flex items-center justify-center transform transition hover:scale-110 active:scale-95">
              <Camera size={28} />
            </button>
          </div>

          <button onClick={() => setView('map')} className={`flex flex-col items-center gap-1 p-2 w-16 transition ${view === 'map' ? 'text-emerald-600 -translate-y-2' : 'text-gray-400'}`}>
            <MapIcon size={view === 'map' ? 26 : 22} />
            <span className="text-[10px] font-bold">Map</span>
          </button>

          <button onClick={() => setView('marketplace')} className={`flex flex-col items-center gap-1 p-2 w-16 transition ${view === 'marketplace' ? 'text-emerald-600 -translate-y-2' : 'text-gray-400'}`}>
            <ShoppingBag size={view === 'marketplace' ? 26 : 22} />
            <span className="text-[10px] font-bold">Shop</span>
          </button>
        </nav>
      )}
    </div>
  );
}

export default App;
