// --- COMPONENT: AI CAMERA (GEN-AI FEATURE) ---
const AICamera = ({ onScanComplete, setView }) => {
  const videoRef = useRef(null);
  const [model, setModel] = useState(null);
  const [step, setStep] = useState('scanning'); // scanning, detected, processing, result
  const [prediction, setPrediction] = useState(null);

  useEffect(() => {
    async function loadModel() {
      try {
        const loadedModel = await cocoSsd.load();
        setModel(loadedModel);
      } catch (e) { console.log('Model load error'); }
    }
    loadModel();
    if (navigator.mediaDevices.getUserMedia) {
      navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } })
        .then(stream => { if (videoRef.current) videoRef.current.srcObject = stream; });
    }
  }, []);

  const scan = async () => {
    setStep('processing');
    if (model && videoRef.current) {
        const preds = await model.detect(videoRef.current);
        const validItem = preds.find(p => ['bottle', 'cup', 'bowl', 'book'].includes(p.class));
        
        // Simulate "Creative GenAI" delay
        setTimeout(() => {
            setPrediction(validItem ? 
                { name: validItem.class, price: 0.20, trans: "Recycled Polyester Jersey" } : 
                { name: "Plastic Bottle", price: 0.20, trans: "Park Bench" }); // Fallback for demo
            setStep('result');
        }, 2000);
    }
  };

  return (
    <div className="fixed inset-0 bg-black z-50 flex flex-col">
      {/* Camera View */}
      <div className="relative flex-1 bg-gray-900 overflow-hidden">
        <video ref={videoRef} autoPlay muted className="w-full h-full object-cover opacity-80" />
        
        {/* AR Overlay */}
        <div className="absolute inset-0 flex items-center justify-center">
            <div className={`w-72 h-72 border-2 rounded-3xl transition-all duration-500 flex flex-col items-center justify-between p-4
                ${step === 'processing' ? 'border-emerald-500 animate-pulse bg-emerald-500/10' : 'border-white/30'}`}>
                <span className="text-white/70 text-xs font-mono uppercase">Target Lock</span>
                {step === 'processing' && <span className="text-emerald-400 font-bold animate-bounce">AI ANALYZING...</span>}
                <span className="text-white/70 text-xs font-mono uppercase">...</span>
            </div>
        </div>
        
        {/* Header Controls */}
        <div className="absolute top-0 w-full p-6 flex justify-between items-start pt-12">
            <button onClick={() => setView('dashboard')} className="p-3 bg-black/40 backdrop-blur-md rounded-full text-white"><X size={20}/></button>
            <div className="px-4 py-2 bg-black/40 backdrop-blur-md rounded-full text-white text-xs font-bold border border-white/10">
                ‚ú® GenAI Vision Active
            </div>
        </div>
      </div>

      {/* Bottom Sheet UI */}
      <div className="bg-white rounded-t-3xl p-6 min-h-[30vh]">
        {step === 'result' && prediction ? (
            <div className="animate-slide-up">
                <div className="flex items-center gap-4 mb-6">
                    <div className="w-16 h-16 bg-emerald-100 rounded-2xl flex items-center justify-center text-3xl">‚ôªÔ∏è</div>
                    <div>
                        <h3 className="text-xl font-bold text-gray-800 capitalize">{prediction.name} Identified</h3>
                        <p className="text-sm text-gray-500">Material: Polyethylene Terephthalate</p>
                    </div>
                    <div className="ml-auto">
                        <span className="block text-2xl font-black text-emerald-600">+RM {prediction.price.toFixed(2)}</span>
                    </div>
                </div>

                {/* CREATIVE FEATURE: Transformation Preview */}
                <div className="bg-indigo-50 p-4 rounded-xl border border-indigo-100 mb-6">
                    <div className="flex items-center gap-2 mb-2">
                        <Zap size={16} className="text-indigo-600" />
                        <span className="text-xs font-bold text-indigo-600 uppercase tracking-wider">Future Vision</span>
                    </div>
                    <p className="text-sm text-gray-700">
                        Great job! This item will be processed and transformed into a <span className="font-bold text-indigo-700">{prediction.trans}</span>.
                    </p>
                </div>

                <button onClick={() => { onScanComplete(prediction.price); }} className="w-full py-4 bg-emerald-600 text-white font-bold rounded-xl shadow-lg hover:bg-emerald-700 transition">
                    Confirm Recycling
                </button>
            </div>
        ) : (
            <div className="text-center pt-2">
                <p className="text-gray-500 text-sm mb-6">Point camera at recyclables. Our AI will identify material and value.</p>
                <button onClick={scan} disabled={step === 'processing'} className="w-full py-4 bg-gray-900 text-white font-bold rounded-xl shadow-lg flex items-center justify-center gap-2">
                    <Camera size={20} />
                    {step === 'processing' ? 'Processing...' : 'Scan Now'}
                </button>
            </div>
        )}
      </div>
    </div>
  );
};

