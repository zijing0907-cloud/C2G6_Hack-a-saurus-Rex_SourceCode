    <script>
        // --- 1. MOCK DATA & CONFIG ---
        const CONFIG = {
            storageKey: 't2c_data_v1',
            userKey: 't2c_current_user',
            materials: {
                'Plastic': { price: 0.80, min: 0.5, max: 2.5 },
                'Metal': { price: 1.50, min: 1.0, max: 5.0 },
                'Paper': { price: 0.50, min: 0.5, max: 4.0 },
                'General': { price: 0.20, min: 1.0, max: 3.0 }
            }
        };

        const INITIAL_DATA = [
            { id: 1, name: "Taman Jaya", email: "jaya@demo.com", password: "123", residents: "101-500", recycled: 1250.50, rewards: 1450.75, status: "Active", deposits: [
                { date: new Date().toLocaleDateString(), material: 'Plastic', weight: 5.5, reward: 4.40 }
            ]},
            { id: 2, name: "Bandar Harmoni", email: "harmoni@demo.com", password: "123", residents: "500+", recycled: 890.20, rewards: 900.50, status: "Active", deposits: [] },
            { id: 3, name: "Vista Apartment", email: "vista@demo.com", password: "123", residents: "1-100", recycled: 45.00, rewards: 22.50, status: "Warning", deposits: [] }
        ];

        // --- 2. DATABASE UTILS (LOCALSTORAGE) ---
        const db = {
            init: () => {
                if (!localStorage.getItem(CONFIG.storageKey)) {
                    localStorage.setItem(CONFIG.storageKey, JSON.stringify(INITIAL_DATA));
                }
            },
            get: () => JSON.parse(localStorage.getItem(CONFIG.storageKey)),
            save: (data) => localStorage.setItem(CONFIG.storageKey, JSON.stringify(data)),
            reset: () => {
                localStorage.removeItem(CONFIG.storageKey);
                localStorage.removeItem(CONFIG.userKey);
                location.reload();
            },
            findUser: (email, pass) => {
                const data = db.get();
                return data.find(u => u.email === email && u.password === pass);
            },
            getUserById: (id) => {
                const data = db.get();
                return data.find(u => u.id == id);
            },
            addUser: (user) => {
                const data = db.get();
                user.id = Date.now(); // Simple ID generation
                user.recycled = 0;
                user.rewards = 0;
                user.deposits = [];
                user.status = "New";
                data.push(user);
                db.save(data);
                return user;
            },
            addDeposit: (userId, deposit) => {
                const data = db.get();
                const idx = data.findIndex(u => u.id == userId);
                if (idx !== -1) {
                    data[idx].recycled += deposit.weight;
                    data[idx].rewards += deposit.reward;
                    data[idx].deposits.unshift(deposit);
                    db.save(data);
                    return true;
                }
                return false;
            }
        };

        // --- 3. APP NAVIGATION CONTROLLER ---
        const app = {
            init: () => {
                db.init();
                // Check if user is logged in
                const loggedInId = localStorage.getItem(CONFIG.userKey);
                if (loggedInId) auth.loadDashboard(loggedInId);
                
                // Default view
                app.navigate('management');
            },
            navigate: (viewName) => {
                // UI Toggles
                document.querySelectorAll('.view-section').forEach(el => el.classList.add('hidden'));
                document.getElementById(`view-${viewName}`).classList.remove('hidden');
                
                // Nav Button Styles
                document.querySelectorAll('.nav-btn').forEach(btn => {
                    btn.classList.remove('bg-eco-600', 'text-white');
                    btn.classList.add('text-slate-300');
                });
                const activeBtn = document.getElementById(`nav-${viewName}`);
                if(activeBtn) {
                    activeBtn.classList.add('bg-eco-600', 'text-white');
                    activeBtn.classList.remove('text-slate-300');
                }

                // Load Data for specific views
                if (viewName === 'management') mgmt.render();
                if (viewName === 'sorter') sorter.init();
            },
            resetSystem: () => {
                if(confirm("Reset all data to default demo state?")) db.reset();
            }
        };

        // --- 4. MANAGEMENT DASHBOARD LOGIC ---
        const mgmt = {
            render: () => {
                const data = db.get();
                
                // Update KPIs
                document.getElementById('mgmt-total-communities').innerText = data.length;
                document.getElementById('mgmt-total-waste').innerText = data.reduce((acc, c) => acc + c.recycled, 0).toFixed(2);
                document.getElementById('mgmt-total-rewards').innerText = data.reduce((acc, c) => acc + c.rewards, 0).toFixed(2);
                document.getElementById('mgmt-alerts').innerText = data.filter(c => c.recycled > 1000).length; // Mock alert logic

                // Render Table
                const tbody = document.getElementById('mgmt-table-body');
                tbody.innerHTML = '';
                data.forEach(c => {
                    const row = `
                        <tr class="hover:bg-slate-50 transition">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">${c.name}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-slate-500">${c.residents}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-slate-700">${c.recycled.toFixed(2)}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-bold text-eco-600">RM ${c.rewards.toFixed(2)}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${c.status === 'Active' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}">
                                    ${c.status}
                                </span>
                            </td>
                        </tr>
                    `;
                    tbody.insertAdjacentHTML('beforeend', row);
                });
            }
        };

        // --- 5. SORTER PORTAL LOGIC (AI SIMULATION) ---
        const sorter = {
            currentResult: null,
            init: () => {
                const select = document.getElementById('sorter-select');
                select.innerHTML = '<option value="">Select Community Account...</option>';
                db.get().forEach(c => {
                    const opt = document.createElement('option');
                    opt.value = c.id;
                    opt.innerText = c.name;
                    select.appendChild(opt);
                });
                // Reset UI
                document.getElementById('sorter-file').value = '';
                document.getElementById('sorter-preview').classList.add('hidden');
                document.getElementById('sorter-results').classList.add('hidden');
                document.getElementById('sorter-success-msg').classList.add('hidden');
                document.getElementById('drop-zone-content').classList.remove('hidden');
                document.getElementById('btn-deposit').classList.remove('bg-eco-600');
                document.getElementById('btn-deposit').classList.add('bg-slate-400');
                document.getElementById('btn-deposit').disabled = true;
            },
            handleFileUpload: (e) => {
                const file = e.target.files[0];
                if (!file) return;

                // UI Updates for Upload
                const reader = new FileReader();
                reader.onload = (ev) => {
                    const img = document.getElementById('sorter-preview');
                    img.src = ev.target.result;
                    img.classList.remove('hidden');
                    document.getElementById('drop-zone-content').classList.add('hidden');
                };
                reader.readAsDataURL(file);

                // Start AI Simulation
                document.getElementById('sorter-loading').classList.remove('hidden');
                document.getElementById('sorter-results').classList.add('hidden');

                setTimeout(() => {
                    sorter.runAI(file.name);
                }, 2000); // 2 second delay for realism
            },
            runAI: (filename) => {
                document.getElementById('sorter-loading').classList.add('hidden');
                
                // Mock Logic based on filename
                const name = filename.toLowerCase();
                let material = 'General';
                if (name.includes('plastic') || name.includes('bottle')) material = 'Plastic';
                else if (name.includes('metal') || name.includes('can')) material = 'Metal';
                else if (name.includes('paper') || name.includes('box')) material = 'Paper';

                const config = CONFIG.materials[material];
                // Random weight generation within realistic bounds
                const weight = (Math.random() * (config.max - config.min) + config.min);
                const price = weight * config.price;

                sorter.currentResult = { material, weight, price };

                // Update UI
                document.getElementById('res-material').innerText = material;
                document.getElementById('res-weight').innerText = weight.toFixed(2);
                document.getElementById('res-price').innerText = price.toFixed(2);
                document.getElementById('sorter-results').classList.remove('hidden');
                
                // Enable Button
                const btn = document.getElementById('btn-deposit');
                btn.disabled = false;
                btn.classList.remove('bg-slate-400');
                btn.classList.add('bg-eco-600', 'hover:bg-eco-700');
            },
            submitDeposit: () => {
                const communityId = document.getElementById('sorter-select').value;
                if (!communityId) {
                    alert("Please select a community first.");
                    return;
                }
                
                const depositData = {
                    date: new Date().toLocaleDateString(),
                    material: sorter.currentResult.material,
                    weight: parseFloat(sorter.currentResult.weight.toFixed(2)),
                    reward: parseFloat(sorter.currentResult.price.toFixed(2))
                };

                db.addDeposit(communityId, depositData);
                
                document.getElementById('sorter-success-msg').classList.remove('hidden');
                document.getElementById('btn-deposit').disabled = true;
                document.getElementById('btn-deposit').classList.add('bg-slate-400');
                document.getElementById('btn-deposit').classList.remove('bg-eco-600');

                // Refresh Admin dashboard in background
                mgmt.render();
            }
        };

        // --- 6. COMMUNITY HUB & AUTH LOGIC ---
        const auth = {
            switchMode: (mode) => {
                if (mode === 'register') {
                    document.getElementById('form-login').classList.add('hidden');
                    document.getElementById('form-register').classList.remove('hidden');
                } else {
                    document.getElementById('form-login').classList.remove('hidden');
                    document.getElementById('form-register').classList.add('hidden');
                }
            },
            login: (e) => {
                e.preventDefault();
                const email = document.getElementById('login-email').value;
                const pass = document.getElementById('login-password').value;
                
                const user = db.findUser(email, pass);
                if (user) {
                    localStorage.setItem(CONFIG.userKey, user.id);
                    auth.loadDashboard(user.id);
                } else {
                    alert("Invalid Credentials (Try: jaya@demo.com / 123)");
                }
            },
            register: (e) => {
                e.preventDefault();
                const newUser = {
                    name: document.getElementById('reg-name').value,
                    email: document.getElementById('reg-email').value,
                    password: document.getElementById('reg-password').value,
                    residents: document.getElementById('reg-residents').value
                };
                
                const created = db.addUser(newUser);
                localStorage.setItem(CONFIG.userKey, created.id);
                alert("Registration Successful!");
                auth.loadDashboard(created.id);
                mgmt.render(); // Update admin view
            },
            loadDashboard: (userId) => {
                const user = db.getUserById(userId);
                if (!user) { auth.logout(); return; }

                // Hide Auth, Show Dash
                document.getElementById('auth-container').classList.add('hidden');
                document.getElementById('dashboard-container').classList.remove('hidden');

                // Populate Data
                document.getElementById('dash-name').innerText = user.name;
                document.getElementById('dash-details').innerText = `${user.residents} Residents ‚Ä¢ ${user.email}`;
                document.getElementById('dash-balance').innerText = user.rewards.toFixed(2);
                document.getElementById('dash-kg').innerText = user.recycled.toFixed(2);
                document.getElementById('dash-co2').innerText = (user.recycled * 2.5).toFixed(1); // Rough CO2 calc

                // Progress Bar
                const percent = Math.min((user.recycled / 500) * 100, 100);
                setTimeout(() => {
                    document.getElementById('dash-progress').style.width = `${percent}%`;
                }, 100);

                // History Table
                const tbody = document.getElementById('dash-history-body');
                tbody.innerHTML = '';
                if(user.deposits.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="4" class="px-6 py-4 text-center text-slate-400">No deposits yet.</td></tr>';
                } else {
                    user.deposits.forEach(d => {
                        tbody.innerHTML += `
                            <tr>
                                <td class="px-6 py-4 text-sm text-slate-600">${d.date}</td>
                                <td class="px-6 py-4 text-sm text-slate-900 font-medium">${d.material}</td>
                                <td class="px-6 py-4 text-sm text-right text-slate-600">${d.weight} KG</td>
                                <td class="px-6 py-4 text-sm text-right font-bold text-eco-600">+RM ${d.reward.toFixed(2)}</td>
                            </tr>
                        `;
                    });
                }
            },
            logout: () => {
                localStorage.removeItem(CONFIG.userKey);
                document.getElementById('auth-container').classList.remove('hidden');
                document.getElementById('dashboard-container').classList.add('hidden');
                document.getElementById('form-login').reset();
            }
        };

        // Initialize App
        window.addEventListener('DOMContentLoaded', app.init);

    </script>
</body>
</html>
